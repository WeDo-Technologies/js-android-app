<!-- Header with two line breadcrumbs and the action buttons -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/js_action_bar"
    style="@style/actionBar.layout" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/actionBar.bcContainer.layout" >

        <!-- App Icon button -->
        <ImageButton
            android:id="@+id/app_icon_button"
            style="@style/actionBar.bcContainer.appIcon"
            android:onClick="actionButtonOnClickListener"
        />

        <!-- Breadcrumbs -->
        <include
            layout="@layout/two_line_breadcrumbs"
            style="@style/actionBar.bcContainer.breadCrumbs"
        />

    </LinearLayout>

    <!-- Favorites Button -->
    <ImageButton
        android:id="@+id/action_favorites_button"
        style="@style/actionBar.actionButton.favorites"
        android:onClick="actionButtonOnClickListener"
        android:visibility="gone"
    />

    <!-- Search Button -->
    <ImageButton
        android:id="@+id/action_search_button"
        style="@style/actionBar.actionButton.search"
        android:onClick="actionButtonOnClickListener"
        android:visibility="gone"
    />

</LinearLayout>