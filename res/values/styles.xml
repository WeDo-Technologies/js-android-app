<resources>

    <!-- Default ListView Style -->
    <style name="list.view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:drawSelectorOnTop">false</item>
        <item name="android:cacheColorHint">@android:color/white</item>
        <item name="android:divider">@color/js_lighter_grey</item>
        <item name="android:dividerHeight">1px</item>
    </style>

    <!-- Default Label Style -->
    <style name="label">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">2dip</item>
        <item name="android:layout_marginLeft">5dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

        <style name="label.blue">
            <item name="android:textColor">@color/js_blue</item>
        </style>

    <!-- Default EditText Style-->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

        <style name="editText.singleLine">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:singleLine">true</item>
        </style>

        <style name="editText.multiLine">
            <item name="android:gravity">left</item>
            <item name="android:lines">7</item>
        </style>

    <!-- Server Profiles Manager Layout -->
    <style name="serverProfileManager" />

    <style name="serverProfileManager.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!-- Server Profile Layout -->
    <style name="serverProfile" />

    <style name="serverProfile.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="serverProfile.scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="serverProfile.editsContainer" />

        <style name="serverProfile.editsContainer.layout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:padding">10dp</item>
        </style>

    <style name="serverProfile.button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dip</item>
    </style>

    <style name="serverProfile.checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/js_blue</item>
    </style>

    <!-- Home Layout -->
    <style name="home" />

    <style name="home.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="home.header" />

        <style name="home.header.logo">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">96dp</item>
            <item name="android:background">@null</item>
            <item name="android:src">@drawable/ic_ha_header_logo</item>
        </style>

    <style name="home.header.shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_ha_header_shadow</item>
    </style>

    <style name="home.scrollView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="home.list" />

    <style name="home.list.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

        <style name="home.list.item" />

        <style name="home.list.item.layout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@drawable/bs_white_blue</item>
            <item name="android:gravity">center</item>
        </style>

            <style name="home.list.item.icon">
                <item name="android:layout_width">64dp</item>
                <item name="android:layout_height">64dp</item>
                <item name="android:scaleType">center</item>
            </style>

                <style name="home.list.item.icon.repository">
                    <item name="android:src">@drawable/ic_ha_repository</item>
                </style>

                <style name="home.list.item.icon.library">
                    <item name="android:src">@drawable/ic_ha_library</item>
                </style>

                <style name="home.list.item.icon.search">
                    <item name="android:src">@drawable/ic_ha_search</item>
                </style>

                <style name="home.list.item.icon.favorites">
                    <item name="android:src">@drawable/ic_ha_favorites</item>
                </style>

                <style name="home.list.item.icon.servers">
                    <item name="android:src">@drawable/ic_ha_servers</item>
                </style>

                <style name="home.list.item.icon.savedReports">
                    <item name="android:src">@drawable/ic_ha_saved_reports</item>
                </style>

            <style name="home.list.item.txtContainer" />

            <style name="home.list.item.txtContainer.layout">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:paddingRight">4dp</item>
            </style>

                <style name="home.list.item.txtContainer.text">
                    <item name="android:layout_width">wrap_content</item>
                    <item name="android:layout_height">wrap_content</item>
                    <item name="android:singleLine">true</item>
                </style>

                    <style name="home.list.item.txtContainer.text.label">
                        <item name="android:textSize">18sp</item>
                        <item name="android:textColor">@color/cs_dark_grey_white</item>
                    </style>

                    <style name="home.list.item.txtContainer.text.description">
                        <item name="android:textColor">@color/cs_grey_white</item>
                        <item name="android:textSize">13sp</item>
                    </style>

        <style name="home.list.spacer">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">1px</item>
            <item name="android:background">@color/js_lighter_grey</item>
        </style>
    <style name="home.footer" />

        <style name="home.footer.layout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:background">@color/js_dark_grey</item>
            <item name="android:gravity">center</item>
            <item name="android:padding">5dp</item>
        </style>

        <style name="home.footer.text">
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:singleLine">true</item>
            <item name="android:textSize">18sp</item>
        </style>

    <style name="home.dialog" />

        <style name="home.dialog.table" />

            <style name="home.dialog.table.layout">
                <item name="android:layout_width">match_parent</item>
                <item name="android:layout_height">wrap_content</item>
                <item name="android:shrinkColumns">1</item>
                <item name="android:paddingBottom">10dp</item>
            </style>

            <style name="home.dialog.table.label">
                <item name="android:textStyle">bold</item>
                <item name="android:layout_marginLeft">5dp</item>
                <item name="android:paddingRight">10dp</item>
            </style>

        <style name="home.dialog.passwordEdit">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:inputType">textPassword</item>
        </style>

    <!-- Repository Layout -->
    <style name="repository" />

    <style name="repository.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="repository.nothingToDisplayLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/js_light_grey</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Resource Edit Layout -->
    <style name="resourceEdit" />

    <style name="resourceEdit.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="resourceEdit.button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dip</item>
    </style>

    <!-- Resource Info Layout -->
    <style name="resourceInfo" />

    <style name="resourceInfo.table" />

    <style name="resourceInfo.table.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

        <style name="resourceInfo.table.name">
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:paddingRight">10dp</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/js_dark_grey</item>
        </style>

        <style name="resourceInfo.table.info">
            <item name="android:textSize">18sp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/js_blue</item>
        </style>

    <style name="resourceInfo.spacer">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/js_light_grey</item>
    </style>

    <style name="resourceInfo.spacer.short">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- Report Options Layout -->
    <style name="reportOptions" />

    <style name="reportOptions.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="reportOptions.scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="reportOptions.container" />

    <style name="reportOptions.container.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

        <style name="reportOptions.container.inputControls" />

        <style name="reportOptions.container.inputControls.layout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

    <style name="reportOptions.button">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Report HTML Viewer Layout -->
    <style name="htmlViewer" />

    <style name="htmlViewer.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="htmlViewer.webView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="htmlViewer.progressBar" parent="Widget.JasperMobile.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">-6dp</item>
    </style>

    <!-- Save Report Layout -->
    <style name="saveReport" />

    <style name="saveReport.scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="saveReport.layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="saveReport.reportName" />

        <style name="saveReport.reportName.label" parent="inputControl.label" />
        <style name="saveReport.reportName.input" parent="inputControl.singleValue.editText" />
        <style name="saveReport.reportName.error" parent="inputControl.errorText" />

    <style name="saveReport.outputFormat" />

        <style name="saveReport.outputFormat.label">
            <item name="android:layout_margin">5dp</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">@color/js_blue</item>
        </style>

        <style name="saveReport.outputFormat.spinner">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
        </style>

    <style name="saveReport.button">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Actionbar Sherlock -->
    <style name="Theme.JasperMobile" parent="Theme.Sherlock.Light" />
    <style name="Widget.JasperMobile.ProgressBar.Horizontal" parent="Widget.Sherlock.ProgressBar.Horizontal" />

    <style name="Theme.JasperMobile.Home" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarSize">96dp</item>
        <item name="android:actionBarSize">96dp</item>
        <item name="actionBarStyle">@style/Widget.JasperMobile.Home.ActionBar</item>
        <item name="android:actionBarStyle">@style/Widget.JasperMobile.Home.ActionBar</item>
    </style>

    <style name="Widget.JasperMobile.Home.ActionBar" parent="Widget.Sherlock.ActionBar">
        <item name="background">@drawable/ic_ha_header_background</item>
        <item name="android:background">@drawable/ic_ha_header_background</item>
        <item name="displayOptions">showCustom</item>
        <item name="android:displayOptions">showCustom</item>
    </style>

    <!-- Dialogs -->
    <style name="dialog" />

        <style name="dialog.layout">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
            <item name="android:padding">10dp</item>
        </style>

        <style name="dialog.editText">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">match_parent</item>
        </style>

        <style name="dialog.textView">
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_width">wrap_content</item>
            <item name="android:layout_marginTop">2dp</item>
            <item name="android:layout_marginLeft">5dp</item>
            <item name="android:layout_marginRight">5dp</item>
            <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        </style>

            <style name="dialog.textView.label">
                <item name="android:textStyle">bold</item>>
            </style>

            <style name="dialog.textView.error">
                <item name="android:visibility">gone</item>
                <item name="android:textColor">@color/red</item>
            </style>

</resources>